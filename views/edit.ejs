<% include header %>
<form method="post">
    标题：<br/>
    <input type="text" name="title" value="<%= blog.title %>" disabled="disabled"/><br/>
    标签：<br/>
    <input type="text" name="tag1" value="<%= blog.tags[0] %>" disabled="disabled"/><br/>
    <input type="text" name="tag2" value="<%= blog.tags[1] %>" disabled="disabled"/><br/>
    <input type="text" name="tag3" value="<%= blog.tags[2] %>" disabled="disabled"/><br/>
    正文：<br/>
    <textarea name="blog" cols="100" rows="30"><%= blog.blog %></textarea><br/>
    <input type="submit" value="保存修改"/>
</form>
<% include footer %>